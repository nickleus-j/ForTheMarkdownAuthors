<Window x:Class="WriteInAsciiDoc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WriteInAsciiDoc"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TextBox x:Name="AsciiDocTextBox" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" />
            <WebBrowser x:Name="PreviewBrowser" Grid.Row="1" Height="200" />
            <Button Content="Preview" Grid.Row="2"  />
        </Grid>
    </Grid>
</Window>
