<Window x:Class="MarkdownAuthoring.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MarkdownAuthoring"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <ScrollViewer>
            <TextBox x:Name="MarkdownTextBox" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" />
        </ScrollViewer>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition  Height="50"  />
            </Grid.RowDefinitions>
            <WebBrowser x:Name="PreviewBrowser" Grid.Row="0"/>
            <Button Content="Preview" Grid.Row="1"  Click="PreviewButton_Click" />
        </Grid>
        
        
    </Grid>
</Window>
